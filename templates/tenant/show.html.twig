{% extends 'layouts/app.html.twig' %}

{% block title %}Tenant{% endblock %}

{% block content %}
    <h1>Tenant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tenant.id }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ tenant.lastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ tenant.firstName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ tenant.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ tenant.phone }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ tenant.dateOfBirth ? tenant.dateOfBirth|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tenant_index') }}">back to list</a>

    <a href="{{ path('tenant_edit', {'id': tenant.id}) }}">edit</a>

    {{ include('tenant/_delete_form.html.twig') }}
{% endblock %}
